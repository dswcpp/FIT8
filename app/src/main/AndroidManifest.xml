<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 进步照片功能所需权限 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <application
        android:name=".Fit8Application"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Fit8">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Fit8">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.activity.SettingsActivity"
            android:exported="false"
            android:theme="@style/Theme.Fit8" />

        <activity
            android:name=".ui.activity.UserProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.Fit8" />

        <activity
            android:name=".ui.activity.ExerciseExecutionActivity"
            android:exported="false"
            android:theme="@style/Theme.Fit8"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.activity.WeightInputActivity"
            android:exported="false"
            android:theme="@style/Theme.Fit8" />

        <activity
            android:name=".ui.activity.WaterInputActivity"
            android:exported="false"
            android:theme="@style/Theme.Fit8" />

        <activity
            android:name=".ui.activity.TodayTaskActivity"
            android:exported="false"
            android:theme="@style/Theme.Fit8" />

        <activity
            android:name=".ui.activity.ProgressPhotoActivity"
            android:exported="false"
            android:theme="@style/Theme.Fit8" />

        <activity
            android:name=".ui.activity.ExerciseDetailListActivity"
            android:exported="false"
            android:theme="@style/Theme.Fit8" />

        <activity
            android:name=".ui.activity.ExerciseDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.Fit8" />

        <!-- FileProvider for camera photos -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>
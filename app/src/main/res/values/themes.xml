<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Flat Minimalistic Theme -->
    <style name="Theme.Fit8" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/on_primary</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/on_secondary</item>

        <!-- Background -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorOnSurface">@color/on_surface</item>

        <!-- Error -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Navigation Bar -->
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Typography -->
        <item name="android:fontFamily">sans-serif</item>
        <item name="textAppearanceHeadline1">@style/TextAppearance.Fit8.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Fit8.Headline2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Fit8.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Fit8.Body2</item>
    </style>

    <!-- Typography Styles -->
    <style name="TextAppearance.Fit8.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">@dimen/text_size_display_large</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Fit8.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">@dimen/text_size_headline</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Fit8.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.Fit8.Body2" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">@dimen/text_size_caption</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Flat Button Styles -->
    <style name="Fit8.Button" parent="Widget.Material3.Button">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Fit8.Button.Secondary" parent="Fit8.Button">
        <item name="backgroundTint">@color/gray_100</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Fit8.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <!-- Flat Input Styles -->
    <style name="Fit8.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">@dimen/corner_radius_md</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_radius_md</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_radius_md</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_radius_md</item>
        <item name="boxStrokeColor">@color/gray_300</item>
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
    </style>

    <!-- Navigation Styles -->
    <style name="Fit8.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/background</item>
        <item name="itemIconTint">@color/nav_unselected</item>
        <item name="itemTextColor">@color/nav_unselected</item>
        <item name="itemActiveIndicatorStyle">@style/Fit8.BottomNavigation.ActiveIndicator</item>
        <item name="elevation">0dp</item>
        <item name="android:paddingTop">@dimen/spacing_sm</item>
        <item name="android:paddingBottom">@dimen/spacing_md</item>
    </style>

    <style name="Fit8.BottomNavigation.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@android:color/transparent</item>
    </style>

    <!-- Legacy Support Styles -->
    <style name="Fit8.Button.Primary" parent="Fit8.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/on_primary</item>
    </style>

    <style name="Fit8.Button.Primary.Large" parent="Fit8.Button">
        <item name="android:layout_height">@dimen/button_height_large</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
    </style>

    <style name="Fit8.Button.Outline" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="strokeColor">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
        <item name="elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Fit8.Card" parent="Widget.Material3.CardView.Outlined">
        <item name="cardCornerRadius">@dimen/corner_radius_md</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardBackgroundColor">@color/background</item>
        <item name="android:layout_marginBottom">@dimen/spacing_md</item>
    </style>



</resources>
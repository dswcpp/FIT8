<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Fit8.Card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_sm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/card_padding">

        <!-- 餐次类型标签 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_md"
            android:background="@drawable/bg_meal_type_tag"
            android:gravity="center"
            android:minWidth="48dp"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/spacing_sm"
            android:paddingVertical="@dimen/spacing_xs">

            <TextView
                android:id="@+id/tv_meal_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary"
                android:textSize="@dimen/text_size_sm"
                android:textStyle="bold"
                tools:text="早餐" />

        </LinearLayout>

        <!-- 食物信息 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- 食物名称和分量 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_food_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/on_surface"
                    android:textSize="@dimen/text_size_md"
                    android:textStyle="bold"
                    tools:text="水煮蛋" />

                <TextView
                    android:id="@+id/tv_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_sm"
                    android:textColor="@color/on_surface_variant"
                    android:textSize="@dimen/text_size_sm"
                    tools:text="2个" />

            </LinearLayout>

            <!-- 营养信息 -->
            <TextView
                android:id="@+id/tv_nutrition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs"
                android:textColor="@color/on_surface_variant"
                android:textSize="@dimen/text_size_xs"
                tools:text="蛋白质12g · 碳水1g · 脂肪10g" />

            <!-- 描述信息 -->
            <TextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs"
                android:textColor="@color/on_surface_variant"
                android:textSize="@dimen/text_size_xs"
                android:visibility="gone"
                tools:text="建议水煮5-7分钟，保持蛋黄半熟状态"
                tools:visibility="visible" />

        </LinearLayout>

        <!-- 热量信息和打卡按钮 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_md"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary"
                android:textSize="@dimen/text_size_lg"
                android:textStyle="bold"
                tools:text="140kcal" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_check_in"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginTop="@dimen/spacing_xs"
                android:minWidth="0dp"
                android:paddingHorizontal="@dimen/spacing_sm"
                android:text="✓ 打卡"
                android:textSize="@dimen/text_size_xs"
                app:cornerRadius="16dp"
                app:iconGravity="textStart"
                app:iconPadding="2dp"
                app:iconSize="12dp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_horizontal">

        <!-- 标题 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_lg"
            android:text="@string/data_title"
            android:textColor="@color/on_background"
            android:textSize="@dimen/text_size_title"
            android:textStyle="bold" />

        <!-- 汇总统计卡片 -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Fit8.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_lg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/card_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_md"
                    android:text="数据概览"
                    android:textColor="@color/on_surface"
                    android:textSize="@dimen/text_size_lg"
                    android:textStyle="bold" />

                <!-- 统计数据网格 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- 第一行 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_md"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_total_workouts"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/primary"
                                android:textSize="@dimen/text_size_xxl"
                                android:textStyle="bold"
                                tools:text="15次" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_xs"
                                android:text="总训练次数"
                                android:textColor="@color/on_surface_variant"
                                android:textSize="@dimen/text_size_sm" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_total_days"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/secondary"
                                android:textSize="@dimen/text_size_xxl"
                                android:textStyle="bold"
                                tools:text="21天" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_xs"
                                android:text="总打卡天数"
                                android:textColor="@color/on_surface_variant"
                                android:textSize="@dimen/text_size_sm" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_consecutive_days"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/warning"
                                android:textSize="@dimen/text_size_xxl"
                                android:textStyle="bold"
                                tools:text="7天" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_xs"
                                android:text="连续打卡"
                                android:textColor="@color/on_surface_variant"
                                android:textSize="@dimen/text_size_sm" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- 第二行 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_total_calories"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/error"
                                android:textSize="@dimen/text_size_xl"
                                android:textStyle="bold"
                                tools:text="4200kcal" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_xs"
                                android:text="总消耗"
                                android:textColor="@color/on_surface_variant"
                                android:textSize="@dimen/text_size_sm" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_current_weight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/info"
                                android:textSize="@dimen/text_size_xl"
                                android:textStyle="bold"
                                tools:text="178.5斤" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_xs"
                                android:text="当前体重"
                                android:textColor="@color/on_surface_variant"
                                android:textSize="@dimen/text_size_sm" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_current_body_fat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/success"
                                android:textSize="@dimen/text_size_xl"
                                android:textStyle="bold"
                                tools:text="23.8%" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_xs"
                                android:text="当前体脂"
                                android:textColor="@color/on_surface_variant"
                                android:textSize="@dimen/text_size_sm" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- 第三行：饮水量 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_md"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_today_water_intake"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/primary"
                                android:textSize="@dimen/text_size_xl"
                                android:textStyle="bold"
                                tools:text="1500ml" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_xs"
                                android:text="今日饮水"
                                android:textColor="@color/on_surface_variant"
                                android:textSize="@dimen/text_size_sm" />

                        </LinearLayout>

                        <!-- 空白占位，保持对齐 -->
                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- 时间范围选择 -->
        <com.google.android.material.chip.ChipGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_week"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本周" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_month"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="本月" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_3_months"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3个月" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_all"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部" />

        </com.google.android.material.chip.ChipGroup>

        <!-- 图表类型选择 -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md"
            app:tabIndicatorColor="@color/primary"
            app:tabSelectedTextColor="@color/primary"
            app:tabTextColor="@color/on_surface_variant">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="体重趋势" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="体脂趋势" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="训练统计" />

        </com.google.android.material.tabs.TabLayout>

        <!-- 图表容器 -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Fit8.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_lg">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/chart_height"
                android:padding="@dimen/spacing_sm">

                <!-- 体重趋势图 -->
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chart_weight"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <!-- 体脂趋势图 -->
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chart_body_fat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone" />

                <!-- 训练统计图 -->
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/chart_training"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone" />

                <!-- 加载指示器 -->
                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone" />

            </FrameLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- 导出按钮组 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/spacing_lg">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_export_data"
                style="@style/Fit8.Button.Outline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/spacing_sm"
                android:drawableStart="@drawable/ic_download"
                android:text="导出CSV" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_export_image"
                style="@style/Fit8.Button.Primary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_sm"
                android:drawableStart="@drawable/ic_image"
                android:text="生成图片" />

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>

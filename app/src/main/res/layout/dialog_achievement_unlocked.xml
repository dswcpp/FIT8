<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/spacing_xl">

    <!-- 庆祝图标 -->
    <ImageView
        android:layout_width="@dimen/icon_size_xxl"
        android:layout_height="@dimen/icon_size_xxl"
        android:layout_marginBottom="@dimen/spacing_lg"
        android:src="@drawable/ic_celebration"
        android:tint="@color/warning" />

    <!-- 成就解锁标题 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_md"
        android:text="🎉 成就解锁！"
        android:textColor="@color/primary"
        android:textSize="@dimen/text_size_title"
        android:textStyle="bold" />

    <!-- 成就图标 -->
    <ImageView
        android:id="@+id/iv_achievement_icon"
        android:layout_width="@dimen/achievement_badge_size"
        android:layout_height="@dimen/achievement_badge_size"
        android:layout_marginBottom="@dimen/spacing_md"
        android:background="@drawable/bg_achievement_badge"
        android:padding="@dimen/spacing_sm"
        android:src="@drawable/ic_achievement"
        android:tint="@color/warning" />

    <!-- 成就标题 -->
    <TextView
        android:id="@+id/tv_achievement_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_sm"
        android:gravity="center"
        android:textColor="@color/on_surface"
        android:textSize="@dimen/text_size_xl"
        android:textStyle="bold"
        tools:text="训练新手" />

    <!-- 成就描述 -->
    <TextView
        android:id="@+id/tv_achievement_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_md"
        android:gravity="center"
        android:textColor="@color/on_surface_variant"
        android:textSize="@dimen/text_size_md"
        tools:text="完成第一次训练" />

    <!-- 积分奖励 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_xl"
        android:background="@drawable/bg_points_reward"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/spacing_md"
        android:paddingVertical="@dimen/spacing_sm">

        <ImageView
            android:layout_width="@dimen/icon_size_sm"
            android:layout_height="@dimen/icon_size_sm"
            android:layout_marginEnd="@dimen/spacing_xs"
            android:src="@drawable/ic_star"
            android:tint="@color/warning" />

        <TextView
            android:id="@+id/tv_achievement_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/warning"
            android:textSize="@dimen/text_size_md"
            android:textStyle="bold"
            tools:text="+20分" />

    </LinearLayout>

    <!-- 按钮区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_share"
            style="@style/Fit8.Button.Outline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_sm"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_share"
            android:text="分享" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_close"
            style="@style/Fit8.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_sm"
            android:layout_weight="1"
            android:text="太棒了！" />

    </LinearLayout>

</LinearLayout>

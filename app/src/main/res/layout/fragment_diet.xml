<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 顶部日期导航 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/surface"
                android:elevation="@dimen/toolbar_elevation"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/margin_horizontal">

                <ImageButton
                    android:id="@+id/btn_previous_day"
                    android:layout_width="@dimen/icon_size_md"
                    android:layout_height="@dimen/icon_size_md"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_chevron_left"
                    android:tint="@color/on_surface" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/on_surface"
                        android:textSize="@dimen/text_size_lg"
                        android:textStyle="bold"
                        tools:text="08月14日" />

                    <TextView
                        android:id="@+id/tv_week_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:textColor="@color/on_surface_variant"
                        android:textSize="@dimen/text_size_sm"
                        tools:text="第1周 · 第3天" />

                </LinearLayout>

                <ImageButton
                    android:id="@+id/btn_next_day"
                    android:layout_width="@dimen/icon_size_md"
                    android:layout_height="@dimen/icon_size_md"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_chevron_right"
                    android:tint="@color/on_surface" />

            </LinearLayout>

            <!-- 营养汇总卡片 -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Fit8.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_md"
                        android:text="今日营养摄入"
                        android:textColor="@color/on_surface"
                        android:textSize="@dimen/text_size_lg"
                        android:textStyle="bold" />

                    <!-- 营养成分网格 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- 热量 -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_calories"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/primary"
                                android:textSize="@dimen/text_size_lg"
                                android:textStyle="bold"
                                tools:text="1200kcal" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_xs"
                                android:text="@string/diet_calories"
                                android:textColor="@color/on_surface_variant"
                                android:textSize="@dimen/text_size_xs" />

                            <ProgressBar
                                android:id="@+id/progress_calories"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="40dp"
                                android:layout_height="@dimen/progress_height"
                                android:layout_marginTop="@dimen/spacing_xs"
                                android:max="100"
                                android:progress="70"
                                android:progressTint="@color/primary" />

                        </LinearLayout>

                        <!-- 蛋白质 -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_protein"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/secondary"
                                android:textSize="@dimen/text_size_lg"
                                android:textStyle="bold"
                                tools:text="85g" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_xs"
                                android:text="@string/diet_protein"
                                android:textColor="@color/on_surface_variant"
                                android:textSize="@dimen/text_size_xs" />

                            <ProgressBar
                                android:id="@+id/progress_protein"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="40dp"
                                android:layout_height="@dimen/progress_height"
                                android:layout_marginTop="@dimen/spacing_xs"
                                android:max="100"
                                android:progress="70"
                                android:progressTint="@color/secondary" />

                        </LinearLayout>

                        <!-- 碳水 -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_carbs"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/warning"
                                android:textSize="@dimen/text_size_lg"
                                android:textStyle="bold"
                                tools:text="120g" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_xs"
                                android:text="@string/diet_carbs"
                                android:textColor="@color/on_surface_variant"
                                android:textSize="@dimen/text_size_xs" />

                            <ProgressBar
                                android:id="@+id/progress_carbs"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="40dp"
                                android:layout_height="@dimen/progress_height"
                                android:layout_marginTop="@dimen/spacing_xs"
                                android:max="100"
                                android:progress="70"
                                android:progressTint="@color/warning" />

                        </LinearLayout>

                        <!-- 脂肪 -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_fat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/info"
                                android:textSize="@dimen/text_size_lg"
                                android:textStyle="bold"
                                tools:text="35g" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_xs"
                                android:text="@string/diet_fat"
                                android:textColor="@color/on_surface_variant"
                                android:textSize="@dimen/text_size_xs" />

                            <ProgressBar
                                android:id="@+id/progress_fat"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="40dp"
                                android:layout_height="@dimen/progress_height"
                                android:layout_marginTop="@dimen/spacing_xs"
                                android:max="100"
                                android:progress="70"
                                android:progressTint="@color/info" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Tab布局 -->
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_horizontal"
                android:layout_marginTop="@dimen/spacing_md"
                app:tabIndicatorColor="@color/primary"
                app:tabSelectedTextColor="@color/primary"
                app:tabTextColor="@color/on_surface_variant">

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="推荐食谱" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的记录" />

            </com.google.android.material.tabs.TabLayout>

            <!-- 内容区域 -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_md">

                <!-- 饮食计划RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_diet_plan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/margin_horizontal"
                    android:paddingBottom="@dimen/spacing_xxl"
                    tools:listitem="@layout/item_diet_plan" />

                <!-- 饮食记录RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_meal_records"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/margin_horizontal"
                    android:paddingBottom="@dimen/spacing_xxl"
                    android:visibility="gone"
                    tools:listitem="@layout/item_meal_record" />

                <!-- 加载指示器 -->
                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/spacing_xl"
                    android:visibility="gone" />

            </FrameLayout>

            <!-- 购物清单按钮 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_shopping_list"
                style="@style/Fit8.Button.Outline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_horizontal"
                android:drawableStart="@drawable/ic_shopping_cart"
                android:text="生成购物清单" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- 浮动添加按钮 -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_add"
        android:visibility="gone"
        app:backgroundTint="@color/primary"
        app:tint="@color/on_primary" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>

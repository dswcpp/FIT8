<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/spacing_lg"
        android:paddingTop="@dimen/spacing_xxxl"
        android:paddingBottom="@dimen/spacing_xl">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/spacing_xxl">

            <!-- Date -->
            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_body"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="@dimen/spacing_xs"
                tools:text="Thursday, August 15" />

            <!-- Main Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今日训练"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_display"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="@dimen/spacing_sm" />

        </LinearLayout>

        <!-- Today's Task -->
        <LinearLayout
            android:id="@+id/card_today_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_xl"
            android:background="@color/gray_50"
            android:layout_marginBottom="@dimen/spacing_xxl"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <TextView
                android:id="@+id/tv_task_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_title_large"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="@dimen/spacing_sm"
                tools:text="Upper Body Strength" />

            <TextView
                android:id="@+id/tv_task_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_body"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="@dimen/spacing_lg"
                tools:text="Focus on chest, shoulders, and arms" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_task_duration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_body"
                    android:fontFamily="sans-serif"
                    tools:text="45 minutes" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开始"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/text_size_body"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

        </LinearLayout>

        <!-- Stats Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/spacing_xxl">

            <!-- Consecutive Days -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="@dimen/spacing_md">

                <TextView
                    android:id="@+id/tv_consecutive_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_display"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="@dimen/spacing_xs"
                    tools:text="7" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="连续天数"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_body"
                    android:fontFamily="sans-serif" />

            </LinearLayout>

            <!-- Total Workouts -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/spacing_md">

                <TextView
                    android:id="@+id/tv_total_workouts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_display"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="@dimen/spacing_xs"
                    tools:text="24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="训练次数"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_body"
                    android:fontFamily="sans-serif" />

            </LinearLayout>

        </LinearLayout>

        <!-- Quick Actions -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="快捷操作"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_size_title"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="@dimen/spacing_lg" />

        <!-- Action Items -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Weight Entry -->
            <LinearLayout
                android:id="@+id/card_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="@dimen/spacing_lg"
                android:layout_marginBottom="@dimen/spacing_sm"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="记录体重"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_body_large"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="→"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_body_large"
                    android:fontFamily="sans-serif" />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/divider" />

            <!-- Water Entry -->
            <LinearLayout
                android:id="@+id/card_water"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="@dimen/spacing_lg"
                android:layout_marginBottom="@dimen/spacing_sm"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="记录饮水"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_body_large"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="→"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_body_large"
                    android:fontFamily="sans-serif" />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/divider" />

            <!-- Training -->
            <LinearLayout
                android:id="@+id/card_workout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="@dimen/spacing_lg"
                android:layout_marginBottom="@dimen/spacing_sm"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="开始训练"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_body_large"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="→"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_body_large"
                    android:fontFamily="sans-serif" />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/divider" />

            <!-- Diet -->
            <LinearLayout
                android:id="@+id/card_diet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="@dimen/spacing_lg"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="饮食记录"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_body_large"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="→"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_body_large"
                    android:fontFamily="sans-serif" />

            </LinearLayout>

        </LinearLayout>

        <!-- Check-in Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_check_in"
            style="@style/Fit8.Button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height_large"
            android:layout_marginTop="@dimen/spacing_xxl"
            android:text="开始今日打卡"
            android:textSize="@dimen/text_size_body_large" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <!-- 工具栏 -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/surface"
        android:elevation="@dimen/elevation_sm"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="设置"
        app:titleTextColor="@color/on_surface" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin_horizontal">

            <!-- 通知设置 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md"
                android:text="通知设置"
                android:textColor="@color/primary"
                android:textSize="@dimen/text_size_lg"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                style="@style/Fit8.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding">

                    <!-- 训练提醒 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="@dimen/spacing_sm">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="训练提醒"
                                android:textColor="@color/on_surface"
                                android:textSize="@dimen/text_size_md" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_xs"
                                android:text="每日训练时间提醒"
                                android:textColor="@color/on_surface_variant"
                                android:textSize="@dimen/text_size_sm" />

                        </LinearLayout>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switch_training_reminder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <!-- 训练时间设置 -->
                    <LinearLayout
                        android:id="@+id/layout_training_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="@dimen/spacing_sm">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="训练时间"
                            android:textColor="@color/on_surface"
                            android:textSize="@dimen/text_size_md" />

                        <TextView
                            android:id="@+id/tv_training_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="18:00"
                            android:textColor="@color/primary"
                            android:textSize="@dimen/text_size_md" />

                        <ImageView
                            android:layout_width="@dimen/icon_size_sm"
                            android:layout_height="@dimen/icon_size_sm"
                            android:layout_marginStart="@dimen/spacing_sm"
                            android:src="@drawable/ic_chevron_right"
                            android:tint="@color/on_surface_variant" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/outline_variant" />

                    <!-- 饮水提醒 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="@dimen/spacing_sm">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="饮水提醒"
                                android:textColor="@color/on_surface"
                                android:textSize="@dimen/text_size_md" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_xs"
                                android:text="每2小时提醒一次"
                                android:textColor="@color/on_surface_variant"
                                android:textSize="@dimen/text_size_sm" />

                        </LinearLayout>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switch_water_reminder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/outline_variant" />

                    <!-- 睡眠提醒 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="@dimen/spacing_sm">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="睡眠提醒"
                                android:textColor="@color/on_surface"
                                android:textSize="@dimen/text_size_md" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_xs"
                                android:text="提醒按时休息"
                                android:textColor="@color/on_surface_variant"
                                android:textSize="@dimen/text_size_sm" />

                        </LinearLayout>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switch_sleep_reminder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <!-- 睡眠时间设置 -->
                    <LinearLayout
                        android:id="@+id/layout_sleep_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="@dimen/spacing_sm">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="睡眠时间"
                            android:textColor="@color/on_surface"
                            android:textSize="@dimen/text_size_md" />

                        <TextView
                            android:id="@+id/tv_sleep_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="22:00"
                            android:textColor="@color/primary"
                            android:textSize="@dimen/text_size_md" />

                        <ImageView
                            android:layout_width="@dimen/icon_size_sm"
                            android:layout_height="@dimen/icon_size_sm"
                            android:layout_marginStart="@dimen/spacing_sm"
                            android:src="@drawable/ic_chevron_right"
                            android:tint="@color/on_surface_variant" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 数据管理 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md"
                android:text="数据管理"
                android:textColor="@color/primary"
                android:textSize="@dimen/text_size_lg"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                style="@style/Fit8.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding">

                    <!-- 数据同步 -->
                    <LinearLayout
                        android:id="@+id/layout_data_sync"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="@dimen/spacing_md">

                        <ImageView
                            android:layout_width="@dimen/icon_size_md"
                            android:layout_height="@dimen/icon_size_md"
                            android:layout_marginEnd="@dimen/spacing_md"
                            android:src="@drawable/ic_sync"
                            android:tint="@color/info" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="数据同步"
                                android:textColor="@color/on_surface"
                                android:textSize="@dimen/text_size_md" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_xs"
                                android:text="同步到云端备份"
                                android:textColor="@color/on_surface_variant"
                                android:textSize="@dimen/text_size_sm" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="@dimen/icon_size_sm"
                            android:layout_height="@dimen/icon_size_sm"
                            android:src="@drawable/ic_chevron_right"
                            android:tint="@color/on_surface_variant" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/outline_variant" />

                    <!-- 数据导出 -->
                    <LinearLayout
                        android:id="@+id/layout_data_export"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="@dimen/spacing_md">

                        <ImageView
                            android:layout_width="@dimen/icon_size_md"
                            android:layout_height="@dimen/icon_size_md"
                            android:layout_marginEnd="@dimen/spacing_md"
                            android:src="@drawable/ic_download"
                            android:tint="@color/secondary" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="数据导出"
                                android:textColor="@color/on_surface"
                                android:textSize="@dimen/text_size_md" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_xs"
                                android:text="导出为Excel文件"
                                android:textColor="@color/on_surface_variant"
                                android:textSize="@dimen/text_size_sm" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="@dimen/icon_size_sm"
                            android:layout_height="@dimen/icon_size_sm"
                            android:src="@drawable/ic_chevron_right"
                            android:tint="@color/on_surface_variant" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/outline_variant" />

                    <!-- 数据重置 -->
                    <LinearLayout
                        android:id="@+id/layout_data_reset"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="@dimen/spacing_md">

                        <ImageView
                            android:layout_width="@dimen/icon_size_md"
                            android:layout_height="@dimen/icon_size_md"
                            android:layout_marginEnd="@dimen/spacing_md"
                            android:src="@drawable/ic_refresh"
                            android:tint="@color/error" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="重置数据"
                                android:textColor="@color/error"
                                android:textSize="@dimen/text_size_md" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_xs"
                                android:text="清除所有训练记录"
                                android:textColor="@color/on_surface_variant"
                                android:textSize="@dimen/text_size_sm" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="@dimen/icon_size_sm"
                            android:layout_height="@dimen/icon_size_sm"
                            android:src="@drawable/ic_chevron_right"
                            android:tint="@color/on_surface_variant" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 应用设置 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md"
                android:text="应用设置"
                android:textColor="@color/primary"
                android:textSize="@dimen/text_size_lg"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                style="@style/Fit8.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding">

                    <!-- 深色模式 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="@dimen/spacing_sm">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="深色模式"
                                android:textColor="@color/on_surface"
                                android:textSize="@dimen/text_size_md" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_xs"
                                android:text="护眼深色主题"
                                android:textColor="@color/on_surface_variant"
                                android:textSize="@dimen/text_size_sm" />

                        </LinearLayout>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switch_dark_mode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/outline_variant" />

                    <!-- 语言设置 -->
                    <LinearLayout
                        android:id="@+id/layout_language"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="@dimen/spacing_md">

                        <ImageView
                            android:layout_width="@dimen/icon_size_md"
                            android:layout_height="@dimen/icon_size_md"
                            android:layout_marginEnd="@dimen/spacing_md"
                            android:src="@drawable/ic_language"
                            android:tint="@color/info" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="语言"
                                android:textColor="@color/on_surface"
                                android:textSize="@dimen/text_size_md" />

                            <TextView
                                android:id="@+id/tv_language"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_xs"
                                android:text="中文"
                                android:textColor="@color/on_surface_variant"
                                android:textSize="@dimen/text_size_sm" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="@dimen/icon_size_sm"
                            android:layout_height="@dimen/icon_size_sm"
                            android:src="@drawable/ic_chevron_right"
                            android:tint="@color/on_surface_variant" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/outline_variant" />

                    <!-- 清除缓存 -->
                    <LinearLayout
                        android:id="@+id/layout_clear_cache"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="@dimen/spacing_md">

                        <ImageView
                            android:layout_width="@dimen/icon_size_md"
                            android:layout_height="@dimen/icon_size_md"
                            android:layout_marginEnd="@dimen/spacing_md"
                            android:src="@drawable/ic_delete"
                            android:tint="@color/warning" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="清除缓存"
                                android:textColor="@color/on_surface"
                                android:textSize="@dimen/text_size_md" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_xs"
                                android:text="清理临时文件"
                                android:textColor="@color/on_surface_variant"
                                android:textSize="@dimen/text_size_sm" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="@dimen/icon_size_sm"
                            android:layout_height="@dimen/icon_size_sm"
                            android:src="@drawable/ic_chevron_right"
                            android:tint="@color/on_surface_variant" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 关于 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md"
                android:text="关于"
                android:textColor="@color/primary"
                android:textSize="@dimen/text_size_lg"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                style="@style/Fit8.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding">

                    <!-- 关于应用 -->
                    <LinearLayout
                        android:id="@+id/layout_about"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="@dimen/spacing_md">

                        <ImageView
                            android:layout_width="@dimen/icon_size_md"
                            android:layout_height="@dimen/icon_size_md"
                            android:layout_marginEnd="@dimen/spacing_md"
                            android:src="@drawable/ic_info"
                            android:tint="@color/info" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="关于燃力8周"
                                android:textColor="@color/on_surface"
                                android:textSize="@dimen/text_size_md" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_xs"
                                android:text="版本 1.0.0"
                                android:textColor="@color/on_surface_variant"
                                android:textSize="@dimen/text_size_sm" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="@dimen/icon_size_sm"
                            android:layout_height="@dimen/icon_size_sm"
                            android:src="@drawable/ic_chevron_right"
                            android:tint="@color/on_surface_variant" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/outline_variant" />

                    <!-- 隐私政策 -->
                    <LinearLayout
                        android:id="@+id/layout_privacy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="@dimen/spacing_md">

                        <ImageView
                            android:layout_width="@dimen/icon_size_md"
                            android:layout_height="@dimen/icon_size_md"
                            android:layout_marginEnd="@dimen/spacing_md"
                            android:src="@drawable/ic_shield"
                            android:tint="@color/success" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="隐私政策"
                                android:textColor="@color/on_surface"
                                android:textSize="@dimen/text_size_md" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_xs"
                                android:text="数据保护与隐私"
                                android:textColor="@color/on_surface_variant"
                                android:textSize="@dimen/text_size_sm" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="@dimen/icon_size_sm"
                            android:layout_height="@dimen/icon_size_sm"
                            android:src="@drawable/ic_chevron_right"
                            android:tint="@color/on_surface_variant" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/outline_variant" />

                    <!-- 意见反馈 -->
                    <LinearLayout
                        android:id="@+id/layout_feedback"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="@dimen/spacing_md">

                        <ImageView
                            android:layout_width="@dimen/icon_size_md"
                            android:layout_height="@dimen/icon_size_md"
                            android:layout_marginEnd="@dimen/spacing_md"
                            android:src="@drawable/ic_feedback"
                            android:tint="@color/secondary" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"

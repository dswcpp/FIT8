<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- 燃力8周夜间主题 -->
    <style name="Theme.Fit8" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- 主色调 -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>

        <!-- 辅助色 -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>

        <!-- 背景色（夜间模式调整） -->
        <item name="android:colorBackground">@color/gray_900</item>
        <item name="colorSurface">@color/gray_800</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/gray_100</item>

        <!-- 错误色 -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>

        <!-- 状态栏 -->
        <item name="android:statusBarColor">@color/gray_900</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- 导航栏 -->
        <item name="android:navigationBarColor">@color/gray_800</item>
        <item name="android:windowLightNavigationBar">false</item>

        <!-- 字体 -->
        <item name="android:fontFamily">sans-serif</item>
    </style>
</resources>
<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- 阴影层 -->
    <item android:top="-8dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/shadow_color" />
            <corners
                android:topLeftRadius="@dimen/bottom_nav_corner_radius"
                android:topRightRadius="@dimen/bottom_nav_corner_radius" />
        </shape>
    </item>
    
    <!-- 主背景层 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/surface" />
            <corners
                android:topLeftRadius="@dimen/bottom_nav_corner_radius"
                android:topRightRadius="@dimen/bottom_nav_corner_radius" />
        </shape>
    </item>
    
    <!-- 顶部分割线 -->
    <item android:top="0dp" android:bottom="@dimen/bottom_nav_height_minus_1">
        <shape android:shape="rectangle">
            <solid android:color="@color/outline_variant" />
        </shape>
    </item>
    
</layer-list>

<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- 渐变背景 -->
    <gradient
        android:angle="90"
        android:startColor="@color/surface"
        android:endColor="@color/surface_variant"
        android:type="linear" />
    
    <!-- 圆角 -->
    <corners android:radius="@dimen/bottom_nav_corner_radius" />
    
    <!-- 边框 -->
    <stroke
        android:width="1dp"
        android:color="@color/outline_variant_light" />
        
</shape>
